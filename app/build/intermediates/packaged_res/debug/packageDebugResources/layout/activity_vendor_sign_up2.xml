<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/vendorSignUpScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Shop Address"
                android:textSize="18sp" />

            <!--                <EditText-->
            <!--                    android:id="@+id/shopAddressEt"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:background="@color/figmaGrey"-->
            <!--                    android:ems="10"-->
            <!--                    android:hint="Enter your shop address"-->
            <!--                    android:inputType="number"-->
            <!--                    android:paddingStart="10dp" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutVendorShopAddress"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your shop's address"
                app:boxStrokeColor="@color/black"
                app:startIconDrawable="@drawable/baseline_add_location_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shopAddressTextInputEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Landmark"
                android:textSize="18sp" />

            <!--                <EditText-->
            <!--                    android:id="@+id/landmarkEt"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:background="@color/figmaGrey"-->
            <!--                    android:ems="10"-->
            <!--                    android:hint="Enter your land mark"-->
            <!--                    android:inputType="number"-->
            <!--                    android:paddingStart="10dp" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutVendorShopLandmark"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe your shop's landmark"
                app:boxStrokeColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shopLandmarkTextInputEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pin code"
                android:textSize="18sp" />

            <!--                <EditText-->
            <!--                    android:id="@+id/pincodeEt"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:background="@color/figmaGrey"-->
            <!--                    android:ems="10"-->
            <!--                    android:hint="Enter your shop's pincode"-->
            <!--                    android:inputType="textEmailAddress"-->
            <!--                    android:paddingStart="10dp" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPinCode"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin Code"
                app:boxStrokeColor="@color/black"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:helperTextTextColor="@color/red"
                app:prefixTextColor="@color/figmaRed"
                app:startIconDrawable="@drawable/vect_location">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pinCodeTextInputEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="6" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="City"
                android:textSize="18sp" />

            <!--                <EditText-->
            <!--                    android:id="@+id/cityEt"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:background="@color/figmaGrey"-->
            <!--                    android:ems="10"-->
            <!--                    android:hint="Enter the city where your shop is located"-->
            <!--                    android:inputType="number"-->
            <!--                    android:paddingStart="10dp" />-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutCityName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your shop's city"
                app:boxStrokeColor="@color/black"
                app:helperText="Required*"
                app:helperTextTextColor="@color/red"
                app:prefixTextColor="@color/figmaRed">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityNameTextInputEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="State"
                android:textSize="18sp" />

            <!--                <EditText-->
            <!--                    android:id="@+id/stateEt"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="48dp"-->
            <!--                    android:background="@color/figmaGrey"-->
            <!--                    android:ems="10"-->
            <!--                    android:hint="Enter the state where your shop is located"-->
            <!--                    android:inputType="number"-->
            <!--                    android:paddingStart="10dp" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutStateName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your shop's state"
                app:boxStrokeColor="@color/black"
                app:helperText="Required*"
                app:helperTextTextColor="@color/red"
                app:prefixTextColor="@color/figmaRed">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stateNameTextInputEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vendorSignUpScrollView">

        <Button
            android:id="@+id/finalSignupAsVendorButton"
            style="@style/Widget.HouseMartApplication.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Verify account" />
    </LinearLayout>


    <!--    </LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>
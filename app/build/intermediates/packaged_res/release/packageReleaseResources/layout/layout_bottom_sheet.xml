<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/layout_bottom_sheet.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom_sheet"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".auth.ParentAuthActivity">

    <TextView
        android:id="@+id/textField1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Sign up now to access a world of sustainable living"/>

    <Button
        android:id="@+id/signUpUserBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.HouseMartApplication.Button"
        android:textSize="16sp"
        android:text="Sign up as user" />

    <Button
        android:id="@+id/signUpVendorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/Widget.HouseMartApplication.Button"
        android:textSize="16sp"
        android:text="Sign up as Vendor" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textField2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Already have an account?"/>
        <TextView
            android:id="@+id/textField3"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/figmaRed"
            android:text="Sign in"/>

    </LinearLayout>
</LinearLayout>
